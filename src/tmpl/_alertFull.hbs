			<div {{bind-attr class=":alert :alert-disassemble active:alert-warning active::alert-info"}}>
				<button type="button" class="close" aria-hidden="true" {{action "archive" id}}>&times;</button>
				{{#link-to "monitor" monitor.id class="alert-link"}}<h3>{{title}}</h3>{{/link-to}}
				<p>{{text}}</p>
				<dl class="dl-horizontal">
					<dt>Service</dt>
					<dd>{{#link-to "monitor" monitor.id class="alert-link"}}{{monitor.serviceName}}{{/link-to}}</dd>
					<dt>Timestamp</dt>
					<dd>{{timestamp}}</dd>
					<dt>Status</dt>
					{{#if active}}
						<dd>New</dd>
					{{else}}
						<dd>Archived</dd>
					{{/if}}
				</dl>
			</div>