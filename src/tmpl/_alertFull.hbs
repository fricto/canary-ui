			<div class="alert alert-warning alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true" {{action "archive" id}}>&times;</button>
				<h3>{{title}}</h3>
				<p>{{text}}</p>
				<dl class="dl-horizontal">
					<dt>Service</dt>
					<dd>{{#link-to "monitor" monitor.id class="alert-link"}}{{monitor.serviceName}}{{/link-to}}</dd>
					<dt>Timestamp</dt>
					<dd>{{timestamp}}</dd>
					<dt>Active</dt>
					<dd>{{active}}</dd>
				</dl>
			</div>